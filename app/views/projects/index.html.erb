<% if @projects.blank? %>
  <div style="width: 250px;margin-left: 333px;background: #CC3752;padding: 14px 14px 14px 54px;height: 50px;-webkit-border-radius: 9px;-moz-border-radius: 9px;-webkit-transform: skew(0deg,0deg);-moz-transform: skew(0deg,0deg);">
    <h3>No Projects To Display</h3>
  </div>
<% else %>

  <div style="align: center;margin-left: 320px; width: 305px;background: #7A80D6;padding-left: 20px;height: 50px;-webkit-border-radius: 9px;-moz-border-radius: 9px;">
    <h3>List Of All Project With Their Tasks</h3>
  </div>
  <div style="clear: both;">&nbsp;</div>
  <% @projects.each do |proj| %>
    <div style="float: left;border: 2px solid #000000; width: 185px;background: #22DB18;padding: 20px;margin: 8px;-webkit-border-radius: 9px;-moz-border-radius: 9px;-webkit-transform: skew(0deg,0deg);-moz-transform: skew(0deg,0deg);">
      <h4><%= proj.name %></h4>
      <% proj.tasks.each do |task|%>
        <h5><%=task.name%></h5>
      <% end %>
    </div>
  <% end %>
<% end %>
<div style="clear: both;">&nbsp;</div>
<div style="width: 90px;font-size: 12px;background: #D47A31;-webkit-border-radius: 9px;-moz-border-radius: 9px;padding: 15px;">
  <%= link_to "Create Project" , new_project_path %>
</div>